                          </m:mrow>
                        
                      </m:msub>
                      <m:mo stretchy="false">∣</m:mo>
                    </m:mrow>
                  </m:mrow>
                </m:mrow>
              </m:mrow>
            
          </m:mrow>
          <m:annotation encoding="StarMath 5.0"> size 12{ lline q rSub { size 8{e} }  rline} {}</m:annotation>
        </m:semantics>
      </m:math> is
           <equation id="eip-633"><m:math>
        <m:semantics>
          <m:mrow>
            
              <m:mrow>
                <m:mrow>
                  <m:mrow>
