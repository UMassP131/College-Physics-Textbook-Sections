                      </m:msup>
<m:mspace width="0.25em"/>
                      <m:mtext> J)</m:mtext>
                      <m:mo>(</m:mo>
                      <m:mfrac>
                        <m:mtext>1 eV</m:mtext>
                        <m:mrow>
                          <m:mn>1.602</m:mn>
