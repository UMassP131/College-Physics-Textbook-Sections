                        <m:mtext>L=L</m:mtext>
                                          </m:mstyle>
                          <m:mrow>
                            <m:mn>0</m:mn>
                          </m:mrow>
                        
                      </m:msub>
                    </m:mrow>

                  <m:mrow>
                    <m:msqrt>
                      <m:mrow>
                        <m:mn>1</m:mn>
                        <m:mo stretchy="false">−</m:mo>
                        <m:mfrac>
                          <m:msup>
